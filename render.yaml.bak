services:
  - type: web
    name: gutendex
    env: python
    plan: free
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn gutendex.wsgi:application --bind 0.0.0.0:$PORT
    envVars:
      - key: SECRET_KEY
        generateValue: true
      - key: DEBUG
        value: "False"
      - key: ALLOWED_HOSTS
        value: ".onrender.com"
      - key: DATABASE_URL
        fromDatabase:
          name: gutendex-db
          property: connectionString

databases:
  - name: gutendex-db
